
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@model UsuariosWeb.Presentation.Models.UsuarioCadastroModel

<div class="card">
    <div class="card-body">
        <h2> Cadastro de Conta de Usuário </h2>
        <p>Preencha os campos abaixo para criar um usuário</p>
        <hr/>

        @* Criando o formulário *@
        @using(@Html.BeginForm())
        {
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Email de acesso:</label>
                    @Html.TextBoxFor(model => model.Email, new { @class="form-control" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(model => model.Email)
                    </span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <label>Senha de acesso:</label>
                    @Html.PasswordFor(model => model.Senha, new { @class="form-control" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(model => model.Senha)
                    </span>
                </div>

                <div class="col-md-3">
                    <label>Confirme acesso:</label>
                    @Html.PasswordFor(model => model.SenhaConfirmacao, new { @class="form-control" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(model => model.SenhaConfirmacao)
                    </span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <input type="submit" value="Realizar Cadastro" class="btn btn-success" />
                </div>
            </div>

        }
    </div>
</div>